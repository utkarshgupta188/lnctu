# LNCT Attendance API - Automated Configuration
# Copy this file to .env to customize settings

# Cache Configuration
CACHE_TTL=300  # Attendance data cache time in seconds (5 minutes)
SESSION_TTL=1800  # Session cache time in seconds (30 minutes)

# Retry Configuration  
RETRY_ATTEMPTS=3  # Number of retry attempts for failed requests
RETRY_DELAY=2  # Initial delay between retries in seconds

# Background Processing
BACKGROUND_FETCH_INTERVAL=60  # Background fetch interval in seconds
ENABLE_BACKGROUND_TASKS=true  # Enable background pre-fetching

# Rate Limiting
MAX_CALLS_PER_MINUTE=60  # Maximum API calls per minute per endpoint
MAX_CONCURRENT_USERS=50  # Maximum concurrent active sessions

# Server Configuration
DEFAULT_HOST=0.0.0.0
DEFAULT_PORT=8000
LOG_LEVEL=info  # debug, info, warning, error

# Security
REQUIRE_HTTPS=false  # Set to true in production
ENABLE_CORS=true  # Enable CORS for web applications

# Monitoring
ENABLE_METRICS=true  # Enable performance metrics collection
HEALTH_CHECK_INTERVAL=30  # Health check interval in seconds

# Development
DEBUG_MODE=false  # Enable debug logging and features
AUTO_RELOAD=false  # Enable auto-reload for development